<body>
	<div id="logreg-forms">
		<h1 id="title" class="h3 mb-3 font-weight-normal" style="text-align: center"> Quên Mật Khẩu</h1>
		<div asp-validation-summary="ModelOnly" class="text-danger"></div>
		<form class="form-signin" method="post">
			<input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="Email address" required="" autofocus="">
			<span asp-validation-for="Input.Email" class="text-danger"></span>
			<button class="btn btn-primary btn-block" type="submit">Reset Password</button>
			<a href="/Identity/Account/Login" id="cancel_reset"><i class="fas fa-angle-left"></i> Back</a>
		</form>
	</div>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
