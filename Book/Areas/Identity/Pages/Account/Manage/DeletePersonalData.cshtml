@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Delete Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h3>Xóa Tài Khoản</h3>

<div class="alert alert-warning" role="alert">
    <p>
        <strong>Xóa dữ liệu này sẽ xóa vĩnh viễn tài khoản của bạn và không thể khôi phục được dữ liệu này.</strong>
    </p>
</div>

<div>
    <form id="delete-user" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @if (Model.RequirePassword)
        {
            <div class="form-floating">
                <input asp-for="Input.Password" class="form-control" autocomplete="Mật Khẩu" aria-required="true" />
                <label asp-for="Input.Password" class="form-label"></label>
                <hr/>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
        }
        <button class="w-100 btn btn-lg btn-danger" type="submit">Xóa Tài Khoản Và Thoát</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
